<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:SpacedGridControl.Avalonia;assembly=SpacedGridControl.Avalonia"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Prolizy.Viewer.Views.Panes.DebugPane">
    <avalonia:SpacedGrid RowDefinitions="Auto,Auto,*" RowSpacing="10" Margin="10">
        
        <TextBlock Text="Débug"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Grid.Row="0"/>
        
        <controls:InfoBar Grid.Row="1" Severity="Error" IsOpen="True" IsClosable="False"
                          Message="Si vous ne savez pas ce que vous faites, ne touchez à rien !" />
        
        <ScrollViewer Grid.Row="2" HorizontalAlignment="Stretch">
            <TextBlock TextWrapping="Wrap" Name="TextBlock" HorizontalAlignment="Stretch" />
        </ScrollViewer>
        
    </avalonia:SpacedGrid>
</UserControl>
